{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "angular-simple-oidc": [
        // "./projects/angular-simple-oidc/src/public-api"
        "dist/angular-simple-oidc"
      ],
      "angular-simple-oidc/*": [
        // "./projects/angular-simple-oidc/src/*"
        // "./projects/angular-simple-oic/src/*"
        "dist/angular-simple-oidc/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}